    "description": " أداة تسهيل وتسريع برمجة بوتات دسكورد بلغة JavaScript أو TypeScript",
    "scripts": {
        "build": "eslint . --fix & tsc",
        "build:watch": "eslint . --fix & tsc -w",
        "test": "npm run build & vitest run",
        "lint": "prettier . --write",
        "commit": "git-cz",
        "semantic-release": "semantic-release"
    },
    "type": "commonjs",
    "main": "./dist/index.js",
    "module": "./dist/index.js",
    "types": "./types/index.d.ts",
    "exports": {
        "require": "./dist/index.js",
        "node": "./dist/index.js",
        "import": "./dist/index.js",
        "default": "./dist/index.js",
        "types": "./types/index.d.ts"
    },
    "files": [
        "dist",
        "types",
        "CHANGELOG.md",
        "README.md",
        "LICENSE"
    ],
    "homepage": "https://github.com/DisQada/halfbot",
    "repository": {
        "type": "git",
        "url": "https://github.com/DisQada/halfbot.git"
    },
    "bugs": {
        "url": "https://github.com/DisQada/halfbot/issues"
    },
    "keywords": [
        "discord.js",
        "discord",
        "half",
        "bot",
        "client"
    ],
    "author": {
        "name": "The Alpha",
        "email": "contact@nabilalsaiad.com",
        "url": "https://links.nabilalsaiad.com"
    },
    "contributors": [],
    "license": "Apache-2.0",
    "dependencies": {
        "@disqada/pathfinder": "^1.1.1",
        "discord.js": "^14.10.2",
        "dotenv": "^16.0.3",
        "table": "^6.8.1"
    },
    "devDependencies": {
        "@semantic-release/changelog": "^6.0.3",
        "@semantic-release/git": "^10.0.1",
        "@types/node": "^16.18.25",
        "@typescript-eslint/eslint-plugin": "^5.59.2",
        "@typescript-eslint/parser": "^5.59.2",
        "@vitest/coverage-c8": "^0.29.8",
        "commitizen": "^4.3.0",
        "cz-conventional-changelog": "^3.3.0",
        "eslint": "^8.39.0",
        "prettier": "^2.8.8",
        "semantic-release": "^20.1.3",
        "tslib": "^2.5.0",
        "typescript": "^4.9.5",
        "vitest": "^0.29.8"
    },
    "publishConfig": {
        "access": "public"
    },
