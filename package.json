{
    "name": "@disqada/halfbot",
    "version": "2.0.0",
    "description": "A tool to facilitate and accelerate the development of Discord bots",
    "scripts": {
        "test": "jest",
        "lint": "eslint . --fix",
        "format": "prettier . --write",
        "doc": "jsdoc -c jsdoc.json",
        "commit": "git-cz",
        "semantic-release": "semantic-release"
    },
    "type": "commonjs",
    "main": "./src/exports.js",
    "exports": {
        ".": {
            "node": "./src/exports.js",
            "require": "./src/exports.js"
        }
    },
    "files": [
        "src/",
        "CHANGELOG.md",
        "README.md",
        "LICENSE"
    ],
    "homepage": "https://disqada.github.io/halfbot",
    "repository": {
        "type": "git",
        "url": "https://github.com/DisQada/halfbot.git"
    },
    "bugs": {
        "url": "https://github.com/DisQada/halfbot/issues"
    },
    "keywords": [
        "discord.js",
        "discord",
        "half",
        "bot",
        "client"
    ],
    "author": {
        "name": "The Alpha",
        "email": "contact@nabilalsaiad.com",
        "url": "https://links.nabilalsaiad.com"
    },
    "contributors": [],
    "license": "Apache-2.0",
    "dependencies": {
        "@disqada/pathfinder": "^2.0.1",
        "discord.js": "^14.10.2",
        "table": "^6.8.1"
    },
    "devDependencies": {
        "@semantic-release/changelog": "^6.0.3",
        "@semantic-release/git": "^10.0.1",
        "commitizen": "^4.3.0",
        "cz-conventional-changelog": "^3.3.0",
        "docdash": "^2.0.2",
        "eslint": "^8.39.0",
        "eslint-plugin-jest": "^27.2.3",
        "eslint-plugin-jsdoc": "^46.5.0",
        "jest": "^29.6.2",
        "jsdoc": "^4.0.2",
        "prettier": "^2.8.8",
        "semantic-release": "^20.1.3"
    },
    "publishConfig": {
        "access": "public"
    },
    "config": {
        "commitizen": {
            "path": "./node_modules/cz-conventional-changelog"
        }
    }
}
