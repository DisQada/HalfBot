{
    "displayName": "HalfBot",
    "name": "@disqada/halfbot",
    "version": "2.1.1",
    "description": "A tool to facilitate and accelerate the development of Discord bots",
    "scripts": {
        "config": "npm explore @disqada/typedoc -- npm run config",
        "build": "npm explore @disqada/typedoc -- npm run build",
        "clean": "npm explore @disqada/typedoc -- npm run clean",
        "doc": "npm explore @disqada/typedoc -- npm run doc",
        "test": "jest",
        "lint": "eslint . --fix",
        "format": "prettier . --write",
        "commit": "git-cz",
        "semantic-release": "semantic-release"
    },
    "type": "commonjs",
    "main": "./src/exports.js",
    "module": "./src/exports.js",
    "types": "./types/exports.d.ts",
    "exports": {
        ".": {
            "node": "./src/exports.js",
            "require": "./src/exports.js",
            "import": "./src/exports.js",
            "types": "./types/exports.d.ts",
            "default": "./src/exports.js"
        }
    },
    "files": [
        "src/",
        "types/",
        "CHANGELOG.md",
        "README.md",
        "LICENSE"
    ],
    "homepage": "https://disqada.github.io/HalfBot",
    "repository": {
        "type": "git",
        "url": "https://github.com/DisQada/HalfBot.git"
    },
    "bugs": {
        "url": "https://github.com/DisQada/HalfBot/issues"
    },
    "keywords": [
        "discord.js",
        "discord",
        "half",
        "bot",
        "client"
    ],
    "author": {
        "name": "The Alpha",
        "email": "contact@nabilalsaiad.com",
        "url": "https://links.nabilalsaiad.com"
    },
    "contributors": [],
    "license": "Apache-2.0",
    "dependencies": {
        "@disqada/pathfinder": "^2.0.1",
        "discord.js": "^14.10.2",
        "table": "^6.8.1"
    },
    "devDependencies": {
        "@disqada/typedoc": "^1.0.3",
        "@types/jest": "^29.5.10",
        "commitizen": "^4.3.0",
        "cz-conventional-changelog": "^3.3.0",
        "eslint": "^8.39.0",
        "eslint-plugin-import": "^2.28.1",
        "eslint-plugin-jest": "^27.2.3",
        "eslint-plugin-promise": "^6.1.1",
        "jest": "^29.6.2",
        "prettier": "^2.8.8"
    },
    "publishConfig": {
        "access": "public"
    },
    "config": {
        "commitizen": {
            "path": "./node_modules/cz-conventional-changelog"
        }
    }
}
